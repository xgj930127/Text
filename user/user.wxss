.index{
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.head{
    padding: 80rpx;
    line-height: 1;
}
.body{
    font-size:15px;
    overflow: hidden;
}
.title{
    font-size: 52rpx;
    text-align: center;
}
.desc{
    margin-top: 10rpx;
    color: #888888;
    font-size: 28rpx;
}

.widgets__item{
    border-radius: 4rpx;
    cursor: pointer;
}
.widgets__info{
    border-bottom:1px solid #efefef;
    padding: 20rpx;
    display: flex;
    align-items: center;
}
.flex__status{
  flex: 1;
  line-height: 48rpx;
  color:#000;
}
.date{
  font-size: 26rpx;
  color:#aaa;
}
.widgets__info_show{
}
.widgets__info_show .widgets__info-img{
    transform: rotate(-90deg);
}
.widgets__info-name{

}
.widgets__info-img{
    width: 28rpx;
    height:28rpx;
}
.widgets__info-icon{
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
.widgets__list{
    display: none;
}
.widgets__list_show{
    display: block;
}
.widgets{
  border-top:1px solid #ccc;
  border-bottom:1px solid #ccc;
  margin-bottom:10px;
}
.widget{
    position: relative;
    padding: 0 20rpx;
}
.widget__arrow{
    position: absolute;
    top: 28rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 40rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}
.widget__line_first{
    left: 0;
    right: 0;
    background-color: #D8D8D8;
}
.btn__logout{
  height:45px;
  line-height:45px;
  font-size:14px;
  color:red;
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  margin:30px 0;
  border-radius:0;
}
.section{
  text-align:center;
}
.flex-wrp{
    justify-content:space-around;
    height: 100px;
    display:flex;
    background-color: #FFFFFF;
}
.flex-item{
    color: #FFFFFF;
    width: 20%;
    display: flex;
    
}
.float-wrp{
    overflow:hidden;
}
.float-item{
    float:left;
    box-sizing:border-box;
    width: 33.33%;
    height: 100px;
}
.noborder{
  border:0;
}
.resulticon{
  display:flex;
  justify-content: center;
}
.loading__wrap{
  display: flex;
  justify-content: center;
}
.loading__img{
  width: 36rpx;
  height: 36rpx;
  background-size: cover;
}

