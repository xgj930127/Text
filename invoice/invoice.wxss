.content{}
.record_list{overflow: hidden;margin: 20rpx 0;border-bottom: 1rpx solid #d9d9d9;background-color: #fff;}
.title_box{overflow: hidden;color: #1b82d2;border-top: 1rpx solid #d9d9d9;border-bottom: 1rpx solid #d9d9d9;line-height: 84rpx;height:84rpx;font-weight: 600;padding:0 30rpx;}
.title_box_l{float: left;width: 210rpx;font-size: 36rpx;}
.title_box_r{float: right;width: 320rpx;text-align: right;font-size: 30rpx;}
.record_box{overflow: hidden;padding: 0 30rpx;font-size: 30rpx;color: #2c2c2c;line-height: 54rpx;}
.record_l{float: left;width: 210rpx;}
.record_r{float: right;width: 320rpx;text-align: right;color:#666;}
.list_content{padding:10rpx 0;border-bottom: 1rpx solid #d9d9d9;}
.see_detail{height: 50rpx;float: right;margin:15rpx 30rpx;background: #fff;border:1rpx solid #666; line-height: 50rpx;color:#676767;font-size: 24rpx;border:1rpx solid #3178ac;color:#3178ac;}
.box{width: 280rpx;height: 270rpx;margin: 100rpx auto 0;}
.box image{width: 280rpx;height: 270rpx;}
.cont{margin: 50rpx auto 0;text-align: center;font-size: 30rpx;color: #a9a9a9;}
.no_mes_box{margin-bottom: 50rpx;position:absolute;top:0;bottom:0;left:0;right:0;background: #fff;}
.hide{display: none;}
.show{display: block;}