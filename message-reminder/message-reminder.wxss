.wrap{background: #fff;}
.content{border-top: 2rpx solid #eee;margin-top: 30rpx;}
.remind_list{margin:30rpx 30rpx 0;}
.remind_box{overflow: hidden;}
.ico_cur{float: left;width: 20rpx;height: 20rpx;border-radius: 50%;background: #f43530;margin-top: 10rpx;margin-left: 10rpx;}
.remind_mes{float: left;padding-left: 10rpx;font-size: 34rpx;color: #000;line-height: 48rpx;}
.ico_right{float: right;width: 30rpx;height:45rpx;display: none;}
.ico_right wx-image{width: 30rpx;height:30rpx;}
.money_low{margin: 20rpx 0;font-size: 26rpx;color: #a9a9a9;padding-left: 10rpx;}
.time{font-size: 26rpx;color: #d6d6d6;margin-bottom: 30rpx;margin-left: 10rpx;border-bottom:2rpx solid #eee; padding-bottom: 30rpx;}
.box{width: 280rpx;height: 270rpx;margin: 100rpx auto 0;}
.box image{width: 280rpx;height: 270rpx;}
.cont{margin: 50rpx auto 0;text-align: center;font-size: 30rpx;color: #a9a9a9;}
.no_mes_box{margin-bottom: 50rpx;position:absolute;top:0;bottom:0;left:0;right:0;background: #fff;}
.hide{display: none;}
.show{display: block;}
.ico_cur{display: none;}
page{background: #f8f8f8;position:relative;}